      <TextField fx:id="descriptionField" layoutX="250.0" layoutY="278.0" prefWidth="280.0" promptText="Description..." style="-fx-font-size: 13px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-padding: 5px;" />

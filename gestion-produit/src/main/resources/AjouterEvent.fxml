      <!-- Labels with bold fonts and consistent alignment -->
      <Text layoutX="30.0" layoutY="211.0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-fill: #2c3e50;" text="Nom:" />
      <Text layoutX="30.0" layoutY="278.0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-fill: #2c3e50;" text="Description:" />

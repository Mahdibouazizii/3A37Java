<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="582.0" prefWidth="586.0" style="-fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestionproduit.controller.InfoEventController">

    <children>
        <VBox layoutX="20.0" layoutY="14.0" prefHeight="551.0" prefWidth="545.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px; -fx-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Image View with border-radius and shadow -->
            <ImageView fx:id="imageView" fitHeight="192.0" fitWidth="207.0" preserveRatio="true" style="-fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 4);" />

            <!-- Event Name Label with larger font size and bold style -->
            <Label fx:id="nomLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Description with wrap text and smaller font size for better readability -->
            <Label fx:id="descriptionLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />

            <!-- Event Time Labels styled to stand out with moderate size -->
            <Label fx:id="heurDebutLabel" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
            <Label fx:id="heurFinLabel" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />

            <!-- Place Label with larger text for emphasis -->
            <Label fx:id="placeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />

            <!-- Buttons with rounded corners and hover effects -->
            <VBox spacing="15" alignment="center">
                <!-- Delete Button with red background, white text, and hover effect -->
                <Button fx:id="deleteButton" onAction="#onDeleteClicked" prefWidth="140" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-background-radius: 5px; -fx-cursor: hand;"
                        text="Supprimer" />

                <!-- Update Button with blue background, white text, and hover effect -->
                <Button fx:id="updateButton" onAction="#onUpdateClicked" prefWidth="140" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-background-radius: 5px; -fx-cursor: hand;"
                        text="Modifier" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>

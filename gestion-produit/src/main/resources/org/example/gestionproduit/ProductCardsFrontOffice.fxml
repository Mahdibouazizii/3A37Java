<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.gestionproduit.controller.ProductCardsFrontOfficeController">

    <!-- Top navigation bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="🛍️ Produits" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnViewProduit" text="Produit" onAction="#handleProduit"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnViewEvent" text="Event" onAction="#handleEvent"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnAddReclamation" text="Ajouter Réclamation" onAction="#handleAddReclamation"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnViewReclamations" text="Mes Réclamations" onAction="#handleViewReclamations"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button text="Mes Commandes" onAction="#handleMesCommandes"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnGoToAdmin" text="⚙️ Admin" onAction="#handleGoToAdmin"
                        style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-font-weight: bold; -fx-background-radius: 4;"/>

                <Button text="🔓 Logout" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-font-weight: bold; -fx-background-radius: 4;"/>


            </children>
        </HBox>
    </top>


    <!-- Center: Product Cards -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <FlowPane fx:id="flowPane" hgap="10" vgap="10" prefWrapLength="800" style="-fx-padding: 10;"/>
            </content>
        </ScrollPane>
    </center>

    <!-- Right: Cart, Total, and Buttons -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Shopping Cart" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="cartListView" prefWidth="300" prefHeight="300"/>
            <Label fx:id="totalPriceLabel" text="Total: 0.00" style="-fx-font-size: 14px; -fx-text-fill: #27ae60;"/>
            <Button fx:id="btnConfirmPurchase" text="Confirm Purchase" onAction="#handleConfirmPurchase"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button fx:id="btnGenerateFacture" text="Générer Facture" onAction="#handleGenerateCartFacture"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button fx:id="btnUpdateTotal" text="Update Total" onAction="#handleUpdateFactureTotal"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button text="⚙️ Admin Dashboard" onAction="#handleGoToAdmin"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button text="Sign Facture" onAction="#handleOpenSignaturePad"/>


        </VBox>
    </right>

</BorderPane>

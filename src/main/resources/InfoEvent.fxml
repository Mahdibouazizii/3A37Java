<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="582.0" prefWidth="586.0" style="-fx-background-color: #fdfefe;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="green.green.Controller.InfoEventController">

    <children>
        <VBox layoutX="20.0" layoutY="14.0" prefHeight="551.0" prefWidth="545.0" spacing="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <ImageView fx:id="imageView" fitHeight="192.0" fitWidth="207.0" preserveRatio="true" />

            <Label fx:id="nomLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label fx:id="descriptionLabel" wrapText="true" />
            <Label fx:id="heurDebutLabel" />
            <Label fx:id="heurFinLabel" />
            <Label fx:id="placeLabel" />

            <!-- ✅ Bouton Supprimer -->
            <Button fx:id="deleteButton" onAction="#onDeleteClicked" prefWidth="120" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />

            <!-- ✅ Bouton Modifier -->
            <Button fx:id="updateButton" onAction="#onUpdateClicked" prefWidth="120" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Modifier" />

        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="870.0" prefWidth="937.0" style="-fx-background-color: #f4f7fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestionproduit.controller.InfoEventControllerFront">

    <!-- Top navigation bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="🛍️ Produits" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnViewProduit" text="Produit" onAction="#handleProduit"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnViewEvent" text="Event" onAction="#handleEvent"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnAddReclamation" text="Ajouter Réclamation" onAction="#handleAddReclamation"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnViewReclamations" text="Mes Réclamations" onAction="#handleViewReclamations"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button text="Mes Commandes" onAction="#handleMesCommandes"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 10;"/>
                <Button fx:id="btnGoToAdmin" text="⚙️ Admin" onAction="#handleGoToAdmin"
                        style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-font-weight: bold; -fx-background-radius: 4;"/>
                <Button fx:id="btnLogout" text="🔓 Logout" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;
               -fx-font-weight: bold; -fx-background-radius: 4;"/>

            </children>
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="24.0" prefHeight="770.0" prefWidth="813.0" spacing="20">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <ImageView fx:id="imageView" fitHeight="197.0" fitWidth="481.0" preserveRatio="true" style="-fx-border-radius: 8px; -fx-effect: dropshadow(gaussian, #bdc3c7, 15, 0, 0, 2);" />
            <Label fx:id="nomLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-line-spacing: 5px;" wrapText="true" />
            <Label fx:id="heurDebutLabel" style="-fx-font-size: 14px; -fx-text-fill: #3498db;" />
            <Label fx:id="heurFinLabel" style="-fx-font-size: 14px; -fx-text-fill: #3498db;" />
            <Label fx:id="placeLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" />

            <HBox alignment="CENTER" spacing="20">
                <ImageView fx:id="qrCodeImageView" fitHeight="200" fitWidth="200" />
            </HBox>

            <Button fx:id="addButton" onAction="#onAddParticipationClicked"
                    style="-fx-background-color: #87CEEB; -fx-text-fill: white; -fx-font-weight: bold;
               -fx-background-radius: 8px; -fx-padding: 10px 20px; -fx-font-size: 14px;"
                    text="➕ Créer une Participation" />

            <Button onAction="#handleTranslateDescription"
                    style="-fx-background-color: #87CEEB; -fx-text-fill: white; -fx-font-weight: bold;
               -fx-background-radius: 8px; -fx-padding: 10px 20px; -fx-font-size: 14px;"
                    text="Traduire" />

        </VBox>
    </center>

</BorderPane>

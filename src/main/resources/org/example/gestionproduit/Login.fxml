<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gestionproduit.controller.LoginController"
            stylesheets="@style.css">

    <VBox alignment="CENTER" layoutX="147.0" layoutY="20.0" prefHeight="460.0" prefWidth="306.0" spacing="20" style="-fx-padding: 20;">
        <ImageView fx:id="logoImageView" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" />

        <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />

        <!-- Custom CAPTCHA -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="captchaIcon" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@icons/captcha.png" />
                </image>
            </ImageView>
            <Label fx:id="captchaQuestionLabel" text="What is..." minWidth="100" maxWidth="Infinity" />
            <TextField fx:id="captchaAnswerField" promptText="Answer" prefWidth="100" />
        </HBox>

        <Button fx:id="loginButton" onAction="#handleLogin" styleClass="btn-login" text="Login" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" />
            <Hyperlink fx:id="registerLink" onAction="#handleRegisterLink" text="Register here" />
        </HBox>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Forgot your password?" />
            <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" text="Click here" />
        </HBox>
    </VBox>
</AnchorPane>
